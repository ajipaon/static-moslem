    "numberOfAyahs": 8,
    "ayahs": [
      {
        "number": 6091,
        "text": "[ای پیامبر!] آیا سینه‌ات را نگشاده‌ایم؟",
        "numberInSurah": 1,
        "juz": 30,
        "manzil": 7,
        "page": 596,
        "ruku": 536,
        "hizbQuarter": 239,
        "sajda": false
      },
      {
        "number": 6092,
        "text": "و بار سنگینت را از [دوش] تو برنداشتیم؟",
        "numberInSurah": 2,
        "juz": 30,
        "manzil": 7,
        "page": 596,
        "ruku": 536,
        "hizbQuarter": 239,
        "sajda": false
      },
      {
        "number": 6093,
        "text": "آن [بار گران] که برای تو کمرشکن بود.",
        "numberInSurah": 3,
        "juz": 30,
        "manzil": 7,
        "page": 596,
        "ruku": 536,
        "hizbQuarter": 239,
        "sajda": false
      },
      {
        "number": 6094,
        "text": "و نام تو را بلند [آوازه] کردیم.",
        "numberInSurah": 4,
        "juz": 30,
        "manzil": 7,
        "page": 596,
        "ruku": 536,
        "hizbQuarter": 239,
        "sajda": false
      },
      {
        "number": 6095,
        "text": "پس [بدان که] با هر سختی، آسانی است.",
        "numberInSurah": 5,
        "juz": 30,
        "manzil": 7,
        "page": 596,
        "ruku": 536,
        "hizbQuarter": 239,
        "sajda": false
      },
      {
        "number": 6096,
        "text": "[آری!] با هر سختی، آسانی است.",
        "numberInSurah": 6,
        "juz": 30,
        "manzil": 7,
        "page": 596,
        "ruku": 536,
        "hizbQuarter": 239,
        "sajda": false
      },
      {
        "number": 6097,
        "text": "پس هرگاه [از کار] فارغ شدی، [برای کار تازه] بکوش و رنج آن را بر خود هموار کن!",
        "numberInSurah": 7,
        "juz": 30,
