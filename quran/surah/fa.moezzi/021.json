        "ruku": 284,
        "hizbQuarter": 132,
        "sajda": false
      },
      {
        "number": 2589,
        "text": "همانا در این است ابلاغی برای گروهی که پرستشگرند",
        "numberInSurah": 106,
        "juz": 17,
        "manzil": 4,
        "page": 331,
        "ruku": 284,
        "hizbQuarter": 132,
        "sajda": false
      },
      {
        "number": 2590,
