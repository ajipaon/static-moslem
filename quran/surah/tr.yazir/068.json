{
  "code": 200,
  "status": "OK",
  "data": {
    "number": 68,
    "name": "سُورَةُ القَلَمِ",
    "englishName": "Al-Qalam",
    "englishNameTranslation": "The Pen",
    "revelationType": "Meccan",
    "numberOfAyahs": 52,
    "ayahs": [
      {
        "number": 5272,
        "text": "Nûn, Kaleme ve yazdıklarına andolsun.",
        "numberInSurah": 1,
        "juz": 29,
        "manzil": 7,
        "page": 564,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5273,
        "text": "Sen Rabbinin nimetiyle mecnun değilsin.",
        "numberInSurah": 2,
        "juz": 29,
        "manzil": 7,
        "page": 564,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5274,
        "text": "Kuşkusuz senin için tükenmez bir ecir var.",
        "numberInSurah": 3,
        "juz": 29,
        "manzil": 7,
        "page": 564,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5275,
        "text": "Sen elbette yüce bir ahlak üzeresin.",
        "numberInSurah": 4,
        "juz": 29,
        "manzil": 7,
        "page": 564,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5276,
        "text": "Sen de göreceksin, onlar da görecek.",
        "numberInSurah": 5,
        "juz": 29,
        "manzil": 7,
        "page": 564,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5277,
        "text": "Hanginizde imiş o fitne ve cinnet.",
        "numberInSurah": 6,
        "juz": 29,
        "manzil": 7,
        "page": 564,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5278,
        "text": "Doğrusu Rabbin, yolundan sapanı en iyi bilendir. Hidayete ereni de en iyi bilen O'dur.",
        "numberInSurah": 7,
        "juz": 29,
        "manzil": 7,
        "page": 564,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5279,
        "text": "O halde, yalanlayıcılara itaat etme.",
        "numberInSurah": 8,
        "juz": 29,
        "manzil": 7,
        "page": 564,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5280,
        "text": "Onlar istediler ki yumuşak davranasın da onlar da sana yumuşak davransınlar.",
        "numberInSurah": 9,
        "juz": 29,
        "manzil": 7,
        "page": 564,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5281,
        "text": "Şunların hiçbirine boyun eğme: Yemin edip duran aşağılık,",
        "numberInSurah": 10,
        "juz": 29,
        "manzil": 7,
        "page": 564,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5282,
        "text": "Daima kusur arayıp kınayan, hep lâf götürüp getiren,",
        "numberInSurah": 11,
        "juz": 29,
        "manzil": 7,
        "page": 564,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5283,
        "text": "Hayra engel olan, saldırgan, günahkâr,",
        "numberInSurah": 12,
        "juz": 29,
        "manzil": 7,
        "page": 564,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5284,
        "text": "Kaba ve haşin, sonra da kötülükle damgalı,",
        "numberInSurah": 13,
        "juz": 29,
        "manzil": 7,
        "page": 564,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5285,
        "text": "Mal ve oğulları var diye (böyle davranır).",
        "numberInSurah": 14,
        "juz": 29,
        "manzil": 7,
        "page": 564,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5286,
        "text": "Kendisine âyetlerimiz okunduğunda: \"Eskilerin masalları\" der.",
        "numberInSurah": 15,
        "juz": 29,
        "manzil": 7,
        "page": 564,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5287,
        "text": "Yakında biz onu hortumunun (burnunun) üzerinden damgalayacağız.",
        "numberInSurah": 16,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5288,
        "text": "Biz onlara da belâ verdik, bahçe sahiplerine verdiğimiz gibi. Hani onlar sabah olunca bahçeyi mutlaka devşireceklerine yemin etmişlerdi.",
        "numberInSurah": 17,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5289,
        "text": "İstisna da etmiyorlardı (\"inşaallah\" demiyorlardı).",
        "numberInSurah": 18,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5290,
        "text": "Fakat onlar uyurken dolaşıcı bir belâ onu sardı da,",
        "numberInSurah": 19,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5291,
        "text": "Bahçe simsiyah kesiliverdi.",
        "numberInSurah": 20,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5292,
        "text": "Derken sabahleyin birbirlerine seslendiler:",
        "numberInSurah": 21,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5293,
        "text": "\"Haydi, devşirecekseniz erkenden ekininize gidin\" diye.",
        "numberInSurah": 22,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5294,
        "text": "Derken fırladılar, aralarında fısıldaşıyorlardı.",
        "numberInSurah": 23,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5295,
        "text": "\"Sakın bugün hiçbir yoksul bahçeye girip yanınıza sokulmasın\" diyorlardı.",
        "numberInSurah": 24,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5296,
        "text": "(Zanlarınca yoksulları) engellemeye güçleri yeterek erkenden gittiler.",
        "numberInSurah": 25,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5297,
        "text": "Fakat bahçeyi gördüklerinde: \"Biz herhalde yanlış gelmişiz\" dediler.",
        "numberInSurah": 26,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5298,
        "text": "\"Yok, biz mahrum edilmişiz.\" (dediler).",
        "numberInSurah": 27,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5299,
        "text": "İçlerinde en makul olanı şöyle dedi: \"Ben size Rabbinizi tesbih etsenize dememiş miydim?\"",
        "numberInSurah": 28,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5300,
        "text": "\"Rabbimizi tesbih ederiz, doğrusu biz zalimler imişiz.\" (dediler).",
        "numberInSurah": 29,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5301,
        "text": "Ardından suçu birbirlerine yüklemeye başladılar.",
        "numberInSurah": 30,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5302,
        "text": "Yazıklar olsun bize, dediler, biz azgınlarmışız.",
        "numberInSurah": 31,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5303,
        "text": "Ola ki Rabbimiz bize onun yerine daha hayırlısını verir. Biz Rabbimize yönelir, ondan umarız.",
        "numberInSurah": 32,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5304,
        "text": "İşte azap böyledir. Elbette ahiret azabı daha büyüktür. Fakat bilselerdi.",
        "numberInSurah": 33,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5305,
        "text": "Kuşkusuz korunanlar için de, Rableri katında nimetleri bol bahçeler vardır.",
        "numberInSurah": 34,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 499,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5306,
        "text": "Öyle ya, teslimiyet gösterenleri suçlular gibi tutar mıyız hiç?",
        "numberInSurah": 35,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 499,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5307,
        "text": "Neyiniz var, nasıl hüküm veriyorsunuz?",
        "numberInSurah": 36,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 499,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5308,
        "text": "Yoksa size ait bir kitap var da onda mı okuyorsunuz?",
        "numberInSurah": 37,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 499,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5309,
        "text": "O kitapta, \"beğendiğiniz her şey sizindir\" diye mi yazılı?",
        "numberInSurah": 38,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 499,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5310,
        "text": "Yoksa, \"ne hükmederseniz mutlaka sizindir\" diye sizin lehinize olarak tarafımızdan verilmiş, kıyamet gününe kadar geçerli kesin sözler mi var?",
        "numberInSurah": 39,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 499,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5311,
        "text": "Sor bakalım onlara, içlerinden ona kefil hangisi?",
        "numberInSurah": 40,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 499,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5312,
        "text": "Yoksa ortakları mı var onların? Doğru iseler ortaklarını getirsinler.",
        "numberInSurah": 41,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 499,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5313,
        "text": "O gün işler zorlaşır ve secdeye davet edilirler. Fakat güç yetiremezler.",
        "numberInSurah": 42,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 499,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5314,
        "text": "Gözleri düşük bir halde kendilerini bir zillet kaplar. Oysa onlar sapasağlam iken de secdeye davet ediliyorlardı.",
        "numberInSurah": 43,
        "juz": 29,
        "manzil": 7,
        "page": 566,
        "ruku": 499,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5315,
        "text": "Bu sözü yalanlayanı bana bırak. Onları bilmedikleri yönden derece derece azaba yaklaştıracağız.",
        "numberInSurah": 44,
        "juz": 29,
        "manzil": 7,
        "page": 566,
        "ruku": 499,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5316,
        "text": "Onlara mühlet veriyorum. Doğrusu benim tuzağım sağlamdır.",
        "numberInSurah": 45,
        "juz": 29,
        "manzil": 7,
        "page": 566,
        "ruku": 499,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5317,
        "text": "Yoksa onlardan bir ücret istiyorsun da bu yüzden onlar ağır bir borç altında mı kalıyorlar?",
        "numberInSurah": 46,
        "juz": 29,
        "manzil": 7,
        "page": 566,
        "ruku": 499,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5318,
        "text": "Yoksa gayb onların yanlarında da onlar mı yazıyorlar?",
        "numberInSurah": 47,
        "juz": 29,
        "manzil": 7,
        "page": 566,
        "ruku": 499,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5319,
        "text": "Rabbinin hükmüne sabret, balık sahibi gibi olma. Hani o öfkeye boğulmuş da nida etmişti.",
        "numberInSurah": 48,
        "juz": 29,
        "manzil": 7,
        "page": 566,
        "ruku": 499,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5320,
        "text": "Rabbinden bir nimet yetişmiş olmasaydı, elbette kınanacak bir halde ıssız bir diyara atılacaktı.",
        "numberInSurah": 49,
        "juz": 29,
        "manzil": 7,
        "page": 566,
        "ruku": 499,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5321,
        "text": "Fakat Rabbi onu seçti de iyilerden kıldı.",
        "numberInSurah": 50,
        "juz": 29,
        "manzil": 7,
        "page": 566,
        "ruku": 499,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5322,
        "text": "O kafirler Kur'ân'ı işittikleri zaman neredeyse seni gözleri ile devireceklerdi. Bir de durmuşlar \"o bir deli\" diyorlar.",
        "numberInSurah": 51,
        "juz": 29,
        "manzil": 7,
        "page": 566,
        "ruku": 499,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5323,
        "text": "Halbuki o âlemler için bir öğüttür.",
        "numberInSurah": 52,
        "juz": 29,
        "manzil": 7,
        "page": 566,
        "ruku": 499,
        "hizbQuarter": 226,
        "sajda": false
      }
    ],
    "edition": {
      "identifier": "tr.yazir",
      "language": "tr",
      "name": "Elmalılı Hamdi Yazır",
      "englishName": "Elmalili Hamdi Yazir",
      "format": "text",
      "type": "translation",
      "direction": "ltr"
    }
  }
}