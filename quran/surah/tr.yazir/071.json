  "data": {
    "number": 71,
    "name": "سُورَةُ نُوحٍ",
    "englishName": "Nooh",
    "englishNameTranslation": "Noah",
    "revelationType": "Meccan",
    "numberOfAyahs": 28,
    "ayahs": [
      {
        "number": 5420,
        "text": "Gerçekten biz Nûh'u kavmine gönderdik, \"kavmine acı bir azap gelmezden önce onları uyar\" diye.",
        "numberInSurah": 1,
        "juz": 29,
        "manzil": 7,
        "page": 570,
        "ruku": 504,
        "hizbQuarter": 228,
        "sajda": false
      },
      {
        "number": 5421,
        "text": "Dedi ki, \"ey kavmim! Gerçekten ben size açık bir uyarıcıyım\".",
        "numberInSurah": 2,
        "juz": 29,
        "manzil": 7,
        "page": 570,
        "ruku": 504,
        "hizbQuarter": 228,
        "sajda": false
      },
      {
        "number": 5422,
        "text": "Şöyle ki, \"Allah'a kulluk edin, ondan korkun ve bana itaat edin.\"",
        "numberInSurah": 3,
        "juz": 29,
        "manzil": 7,
        "page": 570,
        "ruku": 504,
        "hizbQuarter": 228,
        "sajda": false
      },
      {
        "number": 5423,
        "text": "\"Günahlarınızı bağışlasın ve sizi belli bir süreye kadar ertelesin. Kuşkusuz Allah'ın takdir ettiği süre gelince ertelenmez. Eğer bilseydiniz..\" (inanırdınız).",
        "numberInSurah": 4,
        "juz": 29,
        "manzil": 7,
        "page": 570,
        "ruku": 504,
        "hizbQuarter": 228,
        "sajda": false
      },
      {
        "number": 5424,
        "text": "Nûh dedi ki: \"Ey Rabbim! Ben kavmimi gece gündüz davet ettim.\"",
        "numberInSurah": 5,
        "juz": 29,
        "manzil": 7,
        "page": 570,
        "ruku": 504,
        "hizbQuarter": 228,
        "sajda": false
      },
      {
        "number": 5425,
        "text": "\"Fakat benim çağırmam, onların sadece kaçmalarını artırdı.\"",
        "numberInSurah": 6,
        "juz": 29,
        "manzil": 7,
        "page": 570,
        "ruku": 504,
        "hizbQuarter": 228,
        "sajda": false
      },
      {
        "number": 5426,
        "text": "\"Ben onları senin bağışlaman için her davet ettiğimde, onlar parmaklarını kulaklarına tıkadılar, elbiselerine büründüler, ısrar ettiler, kibirlendikçe kibirlendiler.\"",
        "numberInSurah": 7,
        "juz": 29,
        "manzil": 7,
        "page": 570,
        "ruku": 504,
        "hizbQuarter": 228,
        "sajda": false
      },
      {
        "number": 5427,
        "text": "\"Sonra ben onları açık açık çağırdım.\"",
        "numberInSurah": 8,
        "juz": 29,
        "manzil": 7,
        "page": 570,
        "ruku": 504,
        "hizbQuarter": 228,
        "sajda": false
      },
      {
        "number": 5428,
        "text": "\"Sonra hem ilan ederek söyledim onlara, hem gizli gizli. \"",
        "numberInSurah": 9,
        "juz": 29,
        "manzil": 7,
        "page": 570,
        "ruku": 504,
        "hizbQuarter": 228,
        "sajda": false
      },
      {
        "number": 5429,
        "text": "\"Gelin, dedim, Rabbinizin sizi bağışlamasını isteyin. Çünkü o çok bağışlayıcıdır.\"",
        "numberInSurah": 10,
        "juz": 29,
        "manzil": 7,
        "page": 570,
        "ruku": 504,
        "hizbQuarter": 228,
        "sajda": false
      },
      {
        "number": 5430,
        "text": "\"Üzerinize gökten bol yağmur yağdırsın.\"",
        "numberInSurah": 11,
        "juz": 29,
        "manzil": 7,
        "page": 571,
        "ruku": 504,
        "hizbQuarter": 228,
        "sajda": false
      },
      {
        "number": 5431,
        "text": "\"Mallar ve oğullar vererek sizin imdadınıza koşsun. Sizin için bahçeler yapsın, ırmaklar yapsın.\"",
        "numberInSurah": 12,
        "juz": 29,
        "manzil": 7,
        "page": 571,
        "ruku": 504,
        "hizbQuarter": 228,
        "sajda": false
      },
      {
        "number": 5432,
        "text": "\"Niçin siz Allah'a bir vakar yakıştıramıyorsunuz?\"",
        "numberInSurah": 13,
        "juz": 29,
        "manzil": 7,
        "page": 571,
        "ruku": 504,
        "hizbQuarter": 228,
        "sajda": false
      },
      {
        "number": 5433,
        "text": "\"Oysa o sizi aşama aşama yaratmıştır.\"",
        "numberInSurah": 14,
        "juz": 29,
        "manzil": 7,
        "page": 571,
        "ruku": 504,
        "hizbQuarter": 228,
        "sajda": false
      },
      {
        "number": 5434,
        "text": "\"Görmediniz mi Allah yedi göğü uygun tabakalar halinde nasıl yaratmış?\"",
        "numberInSurah": 15,
        "juz": 29,
        "manzil": 7,
        "page": 571,
        "ruku": 504,
        "hizbQuarter": 228,
        "sajda": false
      },
      {
        "number": 5435,
        "text": "Ve Ay'ı bunların içinde bir nur yapmış, güneşi de bir lamba kılmış.",
        "numberInSurah": 16,
        "juz": 29,
        "manzil": 7,
        "page": 571,
        "ruku": 504,
        "hizbQuarter": 228,
        "sajda": false
      },
      {
        "number": 5436,
        "text": "Allah sizi yerden bir bitki bitirir gibi bitirdi.",
        "numberInSurah": 17,
        "juz": 29,
        "manzil": 7,
        "page": 571,
        "ruku": 504,
        "hizbQuarter": 228,
        "sajda": false
      },
      {
        "number": 5437,
        "text": "Sonra sizi tekrar oraya geri çevirecek ve tekrar çıkaracaktır.",
        "numberInSurah": 18,
        "juz": 29,
        "manzil": 7,
        "page": 571,
        "ruku": 504,
        "hizbQuarter": 228,
        "sajda": false
      },
      {
        "number": 5438,
        "text": "Allah sizin için yeri bir yaygı yapmıştır.",
        "numberInSurah": 19,
        "juz": 29,
        "manzil": 7,
        "page": 571,
        "ruku": 504,
        "hizbQuarter": 228,
        "sajda": false
      },
      {
        "number": 5439,
        "text": "Ki, ondan açılan geniş geniş yollarda gidesiniz.",
        "numberInSurah": 20,
        "juz": 29,
        "manzil": 7,
        "page": 571,
        "ruku": 504,
        "hizbQuarter": 228,
        "sajda": false
      },
      {
        "number": 5440,
        "text": "Nûh dedi ki: \"Ey Rabbim! Onlar bana isyan ettiler; malı ve çocuğu hüsrandan başka bir şeyini artırmayan kimsenin ardına düştüler.\"",
        "numberInSurah": 21,
        "juz": 29,
        "manzil": 7,
        "page": 571,
        "ruku": 505,
        "hizbQuarter": 228,
        "sajda": false
      },
      {
        "number": 5441,
        "text": "\"Büyük büyük tuzaklar kurdular.\"",
        "numberInSurah": 22,
        "juz": 29,
        "manzil": 7,
        "page": 571,
        "ruku": 505,
        "hizbQuarter": 228,
        "sajda": false
      },
      {
        "number": 5442,
        "text": "Dediler ki: \"Sakın tanrılarınızı bırakmayın, ne Vedd'i, ne Suva'ı ve ne de Yeğus'u, Yeûk'u ve Nesr'i.\"",
        "numberInSurah": 23,
        "juz": 29,
        "manzil": 7,
        "page": 571,
        "ruku": 505,
        "hizbQuarter": 228,
        "sajda": false
      },
      {
        "number": 5443,
        "text": "Çok kişiyi yoldan saptırdılar. Sen de o zalimlerin sadece şaşkınlıklarını artır.",
        "numberInSurah": 24,
        "juz": 29,
        "manzil": 7,
        "page": 571,
        "ruku": 505,
        "hizbQuarter": 228,
        "sajda": false
      },
      {
        "number": 5444,
        "text": "Hatalarından dolayı boğuldular, ateşe sokuldular, kendilerine Allah'a karşı yardımcılar da bulamadılar.",
        "numberInSurah": 25,
        "juz": 29,
        "manzil": 7,
        "page": 571,
        "ruku": 505,
        "hizbQuarter": 228,
        "sajda": false
      },
      {
        "number": 5445,
        "text": "Nûh dedi ki: \"Yeryüzünde kafirlerden bir tek kişi bırakma.\"",
        "numberInSurah": 26,
        "juz": 29,
        "manzil": 7,
        "page": 571,
        "ruku": 505,
        "hizbQuarter": 228,
        "sajda": false
      },
      {
        "number": 5446,
        "text": "\"Zira sen onları bırakırsan kullarını yoldan çıkarırlar ve sadece ahlâksız ve kâfir çocuklar doğururlar.\"",
        "numberInSurah": 27,
        "juz": 29,
        "manzil": 7,
        "page": 571,
        "ruku": 505,
        "hizbQuarter": 228,
        "sajda": false
      },
      {
        "number": 5447,
        "text": "\"Ey Rabbim! Bana, babama, anama, mümin olarak evime girene ve bütün inanmış erkek ve kadınlara mağfiret buyur. Zalimlerin de sadece helakini artır.\"",
        "numberInSurah": 28,
        "juz": 29,
        "manzil": 7,
        "page": 571,
        "ruku": 505,
        "hizbQuarter": 228,
        "sajda": false
      }
    ],
    "edition": {
      "identifier": "tr.yazir",
      "language": "tr",
      "name": "Elmalılı Hamdi Yazır",
      "englishName": "Elmalili Hamdi Yazir",
      "format": "text",
      "type": "translation",
      "direction": "ltr"
    }
  }
}