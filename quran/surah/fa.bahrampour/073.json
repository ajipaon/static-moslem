    "number": 73,
    "name": "سُورَةُ المُزَّمِّلِ",
    "englishName": "Al-Muzzammil",
    "englishNameTranslation": "The Enshrouded One",
    "revelationType": "Meccan",
    "numberOfAyahs": 20,
    "ayahs": [
      {
        "number": 5476,
        "text": "هان، اى جامه به خود پيچيده",
        "numberInSurah": 1,
        "juz": 29,
        "manzil": 7,
        "page": 574,
        "ruku": 508,
        "hizbQuarter": 229,
        "sajda": false
      },
      {
        "number": 5477,
        "text": "شب را جز اندكى، [به عبادت‌] برخي",
        "numberInSurah": 2,
        "juz": 29,
        "manzil": 7,
        "page": 574,
        "ruku": 508,
        "hizbQuarter": 229,
        "sajda": false
      },
      {
        "number": 5478,
        "text": "نيمى از آن را، يا اندكى از آن بكاه",
        "numberInSurah": 3,
        "juz": 29,
        "manzil": 7,
        "page": 574,
        "ruku": 508,
        "hizbQuarter": 229,
        "sajda": false
      },
      {
        "number": 5479,
        "text": "يا بر آن [نيمه‌] بيفزاى و قرآن را شمرده و با تأمل بخوان",
        "numberInSurah": 4,
        "juz": 29,
        "manzil": 7,
        "page": 574,
        "ruku": 508,
        "hizbQuarter": 229,
        "sajda": false
      },
      {
        "number": 5480,
        "text": "همانا ما به زودى بر تو گفتارى گران القا خواهيم كرد",
        "numberInSurah": 5,
        "juz": 29,
        "manzil": 7,
        "page": 574,
        "ruku": 508,
        "hizbQuarter": 229,
        "sajda": false
      },
      {
        "number": 5481,
        "text": "مسلما پديده‌ى شب [خيزى‌] داراى استحكام بيشتر و ذكر و قرائت [در آن‌] استوارتر است",
        "numberInSurah": 6,
        "juz": 29,
        "manzil": 7,
        "page": 574,
        "ruku": 508,
        "hizbQuarter": 229,
        "sajda": false
      },
      {
        "number": 5482,
        "text": "تحقيقا تو را در روز آمد و شدى طولانى است",
        "numberInSurah": 7,
        "juz": 29,
        "manzil": 7,
        "page": 574,
        "ruku": 508,
        "hizbQuarter": 229,
        "sajda": false
      },
      {
        "number": 5483,
        "text": "و نام پروردگار خود را ياد كن و [از همه‌] بريده يكسره به سوى او روى آور",
        "numberInSurah": 8,
        "juz": 29,
        "manzil": 7,
        "page": 574,
        "ruku": 508,
        "hizbQuarter": 229,
        "sajda": false
      },
      {
        "number": 5484,
        "text": "[اوست‌] پروردگار مشرق و مغرب كه معبودى جز او نيست، پس او را كارساز خويش گير",
        "numberInSurah": 9,
        "juz": 29,
        "manzil": 7,
        "page": 574,
        "ruku": 508,
        "hizbQuarter": 229,
        "sajda": false
      },
      {
        "number": 5485,
        "text": "و بر آنچه مى‌گويند صبر كن و به شيوه‌اى نيكو از آنان دورى گزين",
        "numberInSurah": 10,
        "juz": 29,
        "manzil": 7,
        "page": 574,
        "ruku": 508,
        "hizbQuarter": 229,
        "sajda": false
      },
      {
        "number": 5486,
        "text": "و مرا با تكذيب كنندگان صاحب نعمت واگذار و اندكى مهلتشان ده",
        "numberInSurah": 11,
        "juz": 29,
        "manzil": 7,
        "page": 574,
        "ruku": 508,
        "hizbQuarter": 229,
        "sajda": false
      },
      {
        "number": 5487,
        "text": "همانا نزد ما زنجيرها و آتش افروخته است",
        "numberInSurah": 12,
        "juz": 29,
        "manzil": 7,
        "page": 574,
        "ruku": 508,
        "hizbQuarter": 229,
        "sajda": false
      },
      {
        "number": 5488,
        "text": "و طعامى گلوگير و عذابى دردناك",
        "numberInSurah": 13,
        "juz": 29,
        "manzil": 7,
        "page": 574,
        "ruku": 508,
        "hizbQuarter": 229,
        "sajda": false
      },
      {
        "number": 5489,
        "text": "روزى كه زمين و كوه‌ها به لرزه در آيند و كوه‌ها توده‌اى از ريگ روان شوند",
        "numberInSurah": 14,
        "juz": 29,
        "manzil": 7,
        "page": 574,
        "ruku": 508,
        "hizbQuarter": 229,
        "sajda": false
      },
      {
        "number": 5490,
        "text": "در حقيقت ما به سوى شما رسولى كه گواه بر شماست روانه كرديم، همان‌گونه كه رسولى به سوى فرعون فرستاديم",
        "numberInSurah": 15,
        "juz": 29,
        "manzil": 7,
        "page": 574,
        "ruku": 508,
        "hizbQuarter": 229,
        "sajda": false
      },
      {
        "number": 5491,
        "text": "[ولى‌] فرعون آن رسول را نافرمانى كرد پس ما او را به شدّت فرو گرفتيم",
        "numberInSurah": 16,
        "juz": 29,
        "manzil": 7,
        "page": 574,
        "ruku": 508,
        "hizbQuarter": 229,
        "sajda": false
      },
      {
        "number": 5492,
        "text": "پس اگر كافر شويد، چگونه از [عذاب‌] روزى كه كودكان را پير مى‌كند خود را حفظ مى‌كنيد",
        "numberInSurah": 17,
        "juz": 29,
        "manzil": 7,
        "page": 574,
        "ruku": 508,
        "hizbQuarter": 229,
        "sajda": false
      },
      {
        "number": 5493,
        "text": "[روزى كه‌] آسمان از [هيبت‌] آن در هم شكافد. وعده‌ى او انجام شدنى است",
        "numberInSurah": 18,
        "juz": 29,
        "manzil": 7,
        "page": 574,
        "ruku": 508,
        "hizbQuarter": 229,
        "sajda": false
      },
      {
        "number": 5494,
        "text": "بى‌ترديد اين [آيات‌] تذكارى است، پس هر كه خواست، به سوى پروردگار خود راهى در پيش گيرد",
        "numberInSurah": 19,
        "juz": 29,
        "manzil": 7,
        "page": 574,
        "ruku": 508,
        "hizbQuarter": 229,
        "sajda": false
      },
      {
        "number": 5495,
        "text": "قطعا پروردگارت مى‌داند كه تو نزديك به دو ثلث از شب و گاه نصف آن يا ثلث آن را [به نماز] بر مى‌خيزى و گروهى از آنان كه با تو هستند نيز [چنين مى‌كنند]، و خداست كه اندازه‌ى شب و روز را تقدير مى‌كند. مى‌داند كه شما هرگز نمى‌توانيد حساب آن را [براى زمان عب",
        "numberInSurah": 20,
        "juz": 29,
        "manzil": 7,
        "page": 575,
        "ruku": 509,
        "hizbQuarter": 230,
        "sajda": false
      }
