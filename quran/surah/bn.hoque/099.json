    "numberOfAyahs": 8,
    "ayahs": [
      {
        "number": 6139,
        "text": "পৃথিবী যখন কম্পিত হবে আপন কম্পনে,",
        "numberInSurah": 1,
        "juz": 30,
        "manzil": 7,
        "page": 599,
        "ruku": 541,
        "hizbQuarter": 239,
        "sajda": false
      },
      {
        "number": 6140,
        "text": "আর পৃথিবী বের করে দেবে তার বোঝাগুলা,",
        "numberInSurah": 2,
        "juz": 30,
        "manzil": 7,
        "page": 599,
        "ruku": 541,
        "hizbQuarter": 239,
        "sajda": false
      },
      {
        "number": 6141,
        "text": "আর মানুষ বলবে -- ''এর কী হল?’’",
        "numberInSurah": 3,
        "juz": 30,
        "manzil": 7,
        "page": 599,
        "ruku": 541,
        "hizbQuarter": 239,
        "sajda": false
      },
      {
        "number": 6142,
        "text": "সেইদিন সে বর্ণনা করবে তার কাহিনীগুলো,",
        "numberInSurah": 4,
        "juz": 30,
        "manzil": 7,
        "page": 599,
        "ruku": 541,
        "hizbQuarter": 239,
        "sajda": false
      },
      {
        "number": 6143,
        "text": "যেন তোমার প্রভু তাকে প্রেরণা দিয়েছেন।",
        "numberInSurah": 5,
        "juz": 30,
        "manzil": 7,
        "page": 599,
        "ruku": 541,
        "hizbQuarter": 239,
        "sajda": false
      },
      {
        "number": 6144,
        "text": "সেইদিন মানুষেরা দলে-দলে বেরিয়ে পড়বে যেন তাদের দেখানো যেতে পারে তাদের ক্রিয়াকলাপ।",
        "numberInSurah": 6,
        "juz": 30,
        "manzil": 7,
        "page": 599,
        "ruku": 541,
        "hizbQuarter": 239,
        "sajda": false
      },
      {
        "number": 6145,
        "text": "তখন যে কেউ এক অণু-পরিমাণ সৎকাজ করেছে সে তা দেখতে পাবে;",
        "numberInSurah": 7,
        "juz": 30,
        "manzil": 7,
        "page": 599,
        "ruku": 541,
        "hizbQuarter": 239,
        "sajda": false
      },
      {
        "number": 6146,
        "text": "আর যে কেউ এক অণু-পরিমাণ মন্দকাজ করেছে সেও তা দেখতে পাবে।",
        "numberInSurah": 8,
