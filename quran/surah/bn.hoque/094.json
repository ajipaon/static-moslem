    "numberOfAyahs": 8,
    "ayahs": [
      {
        "number": 6091,
        "text": "আমরা কি তোমার বক্ষ প্রশস্ত করে দিই নি?",
        "numberInSurah": 1,
        "juz": 30,
        "manzil": 7,
        "page": 596,
        "ruku": 536,
        "hizbQuarter": 239,
        "sajda": false
      },
      {
        "number": 6092,
        "text": "আর আমরা তোমার থেকে লাঘব করেছি তোমার ভার, --",
        "numberInSurah": 2,
        "juz": 30,
        "manzil": 7,
        "page": 596,
        "ruku": 536,
        "hizbQuarter": 239,
        "sajda": false
      },
      {
        "number": 6093,
        "text": "যা চেপে বসেছিল তোমার পিঠে;",
        "numberInSurah": 3,
        "juz": 30,
        "manzil": 7,
        "page": 596,
        "ruku": 536,
        "hizbQuarter": 239,
        "sajda": false
      },
      {
        "number": 6094,
        "text": "আর আমরা তোমার জন্য উন্নত করেছি তোমার নামোল্লেখ।",
        "numberInSurah": 4,
        "juz": 30,
        "manzil": 7,
        "page": 596,
        "ruku": 536,
        "hizbQuarter": 239,
        "sajda": false
      },
      {
        "number": 6095,
        "text": "অতএব কষ্টের সঙ্গেই তো আরাম রয়েছে,",
        "numberInSurah": 5,
        "juz": 30,
        "manzil": 7,
        "page": 596,
        "ruku": 536,
        "hizbQuarter": 239,
        "sajda": false
      },
      {
        "number": 6096,
        "text": "নিশ্চয় কষ্টের সঙ্গে আরাম রয়েছে।",
        "numberInSurah": 6,
        "juz": 30,
        "manzil": 7,
        "page": 596,
        "ruku": 536,
        "hizbQuarter": 239,
        "sajda": false
      },
      {
        "number": 6097,
        "text": "সুতরাং যখন তুমি মুক্ত হয়েছে তখন কঠোর পরিশ্রম করো,",
        "numberInSurah": 7,
        "juz": 30,
        "manzil": 7,
        "page": 596,
        "ruku": 536,
        "hizbQuarter": 239,
        "sajda": false
      },
      {
        "number": 6098,
        "text": "আর তোমার প্রভুর প্রতি তবে একান্তভাবে মনোনিবেশ করো।",
        "numberInSurah": 8,
        "juz": 30,
        "manzil": 7,
