    "numberOfAyahs": 11,
    "ayahs": [
      {
        "number": 6158,
        "text": "(මරණයට පත් වූවන්ව) තිගැස්සීමට සලස්වන සිද්ධියයි!",
        "numberInSurah": 1,
        "juz": 30,
        "manzil": 7,
        "page": 600,
        "ruku": 543,
        "hizbQuarter": 240,
        "sajda": false
      },
      {
        "number": 6159,
        "text": "(එවැනි) තිගැස්සීමට සලස්වන සිද්ධිය කුමක්ද?",
        "numberInSurah": 2,
        "juz": 30,
        "manzil": 7,
        "page": 600,
        "ruku": 543,
        "hizbQuarter": 240,
        "sajda": false
      },
      {
        "number": 6160,
        "text": "(නබියේ!) එම සිද්ධිය අසවල් එක යයි ඔබ දන්නෙහිද?",
        "numberInSurah": 3,
        "juz": 30,
        "manzil": 7,
        "page": 600,
        "ruku": 543,
        "hizbQuarter": 240,
        "sajda": false
      },
      {
        "number": 6161,
        "text": "එදිනදී මිනිසුන් ඇවිස්සී විසිරී තිඛෙන මෙරු මෙන් බවට පත් වනු ඇත.",
        "numberInSurah": 4,
        "juz": 30,
        "manzil": 7,
        "page": 600,
        "ruku": 543,
        "hizbQuarter": 240,
        "sajda": false
      },
      {
        "number": 6162,
        "text": "කඳු විසිරී දැමූ පුළුන් මෙන් පාවී යනු ඇත.",
        "numberInSurah": 5,
        "juz": 30,
        "manzil": 7,
        "page": 600,
        "ruku": 543,
        "hizbQuarter": 240,
        "sajda": false
      },
      {
        "number": 6163,
        "text": "කවුරුන්ගේ පින් වල බර වැඩි වූවේද-",
        "numberInSurah": 6,
        "juz": 30,
        "manzil": 7,
        "page": 600,
        "ruku": 543,
        "hizbQuarter": 240,
        "sajda": false
      },
      {
        "number": 6164,
        "text": "ඔහු තෘප්තියට පත් ජීවිතයෙහි (සැපසේ) ජීවත්ව සිටිනු ඇත.",
        "numberInSurah": 7,
        "juz": 30,
        "manzil": 7,
        "page": 600,
        "ruku": 543,
        "hizbQuarter": 240,
        "sajda": false
      },
      {
        "number": 6165,
        "text": "කවුරුන්ගේ (පින් වල) බර පහසු වී (පාපයන්හි බර වැඩි) වූවේද,",
        "numberInSurah": 8,
        "juz": 30,
        "manzil": 7,
        "page": 600,
        "ruku": 543,
        "hizbQuarter": 240,
        "sajda": false
      },
      {
        "number": 6166,
        "text": "ඔහු රැෙඳන ස්ථානය හාවියාය.",
        "numberInSurah": 9,
        "juz": 30,
        "manzil": 7,
        "page": 600,
        "ruku": 543,
        "hizbQuarter": 240,
        "sajda": false
      },
      {
        "number": 6167,
        "text": "(එම) හාවියා අසවල් එක යයි (නබියේ!) ඔබ දන්නෙහිද?",
        "numberInSurah": 10,
        "juz": 30,
        "manzil": 7,
        "page": 600,
        "ruku": 543,
        "hizbQuarter": 240,
        "sajda": false
      },
      {
        "number": 6168,
        "text": "(එය) ඉදී තිඛෙන (නිරා) ගින්න වන්නේය.",
