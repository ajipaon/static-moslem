    "ayahs": [
      {
        "number": 6080,
        "text": "පෙරවරුවේ (ආලෝකය) මත සත්තකින්ම!",
        "numberInSurah": 1,
        "juz": 30,
        "manzil": 7,
        "page": 596,
        "ruku": 535,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6081,
        "text": "සඟවා ගන්නා (අන්ධකාර) රාත්‍රිය මත සත්තකින්ම!",
        "numberInSurah": 2,
        "juz": 30,
        "manzil": 7,
        "page": 596,
        "ruku": 535,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6082,
        "text": "(නබියේ!) ඔබගේ දෙවියන් ඔබව අත්හැර දැමුවේද නැත. (ඔබව) පිළිකුල් කළේද නැත.",
        "numberInSurah": 3,
        "juz": 30,
        "manzil": 7,
        "page": 596,
        "ruku": 535,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6083,
        "text": "(ඔබගේ) පසු තත්වය පෙර තත්වයට වඩා නියත වශයෙන්ම ඔබට ඉතාමත් උසස් වශයෙන් ඇත්තේය.",
        "numberInSurah": 4,
        "juz": 30,
        "manzil": 7,
        "page": 596,
        "ruku": 535,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6084,
        "text": "ඔබගේ දෙවියන් නැවත (නැවතත් විවිධ උසස් පදවීන්) ඔබට ලබා දෙනු ඇත. (එමගින්) ඔබ තෘප්තියට පත් වන්නෙහිය.",
        "numberInSurah": 5,
        "juz": 30,
        "manzil": 7,
        "page": 596,
        "ruku": 535,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6085,
        "text": "අනාථයෙකු වශයෙන් ඔබව දුටු ඔහු (ඔබට) වාසස්ථානයක් (ලබා දී අනුග්‍රහය) දැක්වූවේ නැද්ද?",
        "numberInSurah": 6,
        "juz": 30,
        "manzil": 7,
        "page": 596,
        "ruku": 535,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6086,
        "text": "යමක් කර කියා ගත නොහැකිව ඔබ සිටිනු දුටු ඔහු ඍජු මාර්ගයෙහි (ඔබව) ඇතුළු කළේය.",
        "numberInSurah": 7,
        "juz": 30,
        "manzil": 7,
        "page": 596,
        "ruku": 535,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6087,
        "text": "දිළිඳුකමින් සිටි ඔබව දුටු ඔහු, (ඔබව) ධනවතෙකු බවට පත් කර හැරියා (නොවෙද?)",
        "numberInSurah": 8,
        "juz": 30,
        "manzil": 7,
        "page": 596,
        "ruku": 535,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6088,
        "text": "(එබැවින් (මේවාට කෘතඥ වනු පිණිස) ඔබ අනාථයින් සමග කෝප නොවනු.",
        "numberInSurah": 9,
        "juz": 30,
