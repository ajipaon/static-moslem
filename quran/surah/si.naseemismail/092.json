  "data": {
    "number": 92,
    "name": "سُورَةُ اللَّيۡلِ",
    "englishName": "Al-Lail",
    "englishNameTranslation": "The Night",
    "revelationType": "Meccan",
    "numberOfAyahs": 21,
    "ayahs": [
      {
        "number": 6059,
        "text": "(සියල්ල) සඟවා ගන්නා (අන්ධකාර) රාත්‍රිය මත සත්තකින්ම!",
        "numberInSurah": 1,
        "juz": 30,
        "manzil": 7,
        "page": 595,
        "ruku": 534,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6060,
        "text": "ආලෝකමත් දහවල මත සත්තකින්ම!",
        "numberInSurah": 2,
        "juz": 30,
        "manzil": 7,
        "page": 595,
        "ruku": 534,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6061,
        "text": "පිරිමි, ගැහැනුන්ව උත්පාදනය කළ අය මත සත්තකින්ම!",
        "numberInSurah": 3,
        "juz": 30,
        "manzil": 7,
        "page": 595,
        "ruku": 534,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6062,
        "text": "(මිනිසුනේ!) නියත වශයෙන්ම ඔබගේ උත්සාහයන් විවිධ අන්දමට ඇත්තේය.",
        "numberInSurah": 4,
        "juz": 30,
        "manzil": 7,
        "page": 595,
        "ruku": 534,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6063,
        "text": "එබැවින් (ඔබගෙන්) කවුරුන් දානමාන කර, (අල්ලාහ්ට) බිය වී-",
        "numberInSurah": 5,
        "juz": 30,
        "manzil": 7,
        "page": 595,
        "ruku": 534,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6064,
        "text": "(මෙම ධර්මයෙහි ඇති) හොඳ කාරණාවන්ද (හොඳ යයි) සත්‍යය කර තබන්නේද-",
        "numberInSurah": 6,
        "juz": 30,
        "manzil": 7,
        "page": 595,
        "ruku": 534,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6065,
        "text": "ඔහුට (ස්වර්ගයට අයත් ඍජු) මාර්ගය අපි පහසුවෙන් ලබා දෙන්නෙමු.",
        "numberInSurah": 7,
        "juz": 30,
        "manzil": 7,
        "page": 595,
        "ruku": 534,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6066,
        "text": "කවුරුන් මසුරුකම් කර, (අල්ලාහ්වද) නොසලකා-",
        "numberInSurah": 8,
        "juz": 30,
        "manzil": 7,
        "page": 595,
        "ruku": 534,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6067,
        "text": "(මෙම ධර්මයෙහි ඇති) හොඳ කාරණාවන්ද බොරු කර තබන්නේද-",
        "numberInSurah": 9,
        "juz": 30,
        "manzil": 7,
        "page": 595,
        "ruku": 534,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6068,
        "text": "ඔහුට අමාරුකමට අයත් (නිරයෙහි) මාර්ගයම අපි පහසු කර තබන්නෙමු.",
        "numberInSurah": 10,
        "juz": 30,
        "manzil": 7,
        "page": 595,
        "ruku": 534,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6069,
        "text": "ඔහු (නිරයෙහි) වැටෙන විට ඔහුගේ වස්තුව, ඔහුට (කිසිම) ප්‍රයෝජනයක් අත් කර දෙන්නේ නැත.",
        "numberInSurah": 11,
        "juz": 30,
        "manzil": 7,
        "page": 595,
        "ruku": 534,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6070,
        "text": "නියත වශයෙන්ම ඍජු මාර්ගය පෙන්වීමම අපගේ යුතුකම වන්නේය.",
        "numberInSurah": 12,
        "juz": 30,
        "manzil": 7,
        "page": 595,
        "ruku": 534,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6071,
        "text": "නියත වශයෙන්ම මෙලොවද, පරලොවද අපගේමය.",
        "numberInSurah": 13,
        "juz": 30,
        "manzil": 7,
        "page": 595,
        "ruku": 534,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6072,
        "text": "(මක්කාවාසීනී!) දළු ලා දැවෙන ගින්න ගැන මා ඔබට බිය ගන්වා අනතුරු අඟවන්නෙමි!",
        "numberInSurah": 14,
        "juz": 30,
        "manzil": 7,
        "page": 595,
        "ruku": 534,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6073,
        "text": "ඉතාමත් අභාග්‍යවන්තයෙකු මිස, (වෙන කිසිවෙකුත්) ඒ තුළට ඇතුළු වන්නේ නැත.",
        "numberInSurah": 15,
        "juz": 30,
        "manzil": 7,
        "page": 596,
        "ruku": 534,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6074,
        "text": "ඔහු (අපගේ ආයාවන්) බොරු කර, ප්‍රතික්ෂේප කර දමනු ඇත.",
        "numberInSurah": 16,
        "juz": 30,
        "manzil": 7,
        "page": 596,
        "ruku": 534,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6075,
        "text": "භය භක්තිකයාම එයින් බේරෙනු ඇත.",
        "numberInSurah": 17,
        "juz": 30,
        "manzil": 7,
        "page": 596,
        "ruku": 534,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6076,
        "text": "ඔහු (පාපයන්ගෙන් තමන්ව) පරිශුද්ධ කර ගැනීම පිණිස තමන්ගේ වස්තුව (දානමාන වශයෙන්) දෙනු ඇත.",
        "numberInSurah": 18,
        "juz": 30,
        "manzil": 7,
        "page": 596,
        "ruku": 534,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6077,
        "text": "ඔහු පිළිතුරු වශයෙන් දිය හැකි අන්දමට කිසිවෙකුගේ කෘතඥභාවයක් ඔහු කෙරෙහි නොතිබියදී-",
        "numberInSurah": 19,
        "juz": 30,
        "manzil": 7,
        "page": 596,
        "ruku": 534,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6078,
        "text": "ඉතාමත් උසස් තම දෙවියන්ගේ ශුද්ධ වූ බාර ගැනීම කැමති වී (දානමාන කරනු ඇත).",
        "numberInSurah": 20,
        "juz": 30,
        "manzil": 7,
        "page": 596,
        "ruku": 534,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6079,
        "text": "(දෙවියන් ඔහුට ලබා දෙන වරප්‍රසාදයන් ගැන) පසුව ඔහුද තෘප්තියට පත් වන්නේය.",
        "numberInSurah": 21,
        "juz": 30,
        "manzil": 7,
        "page": 596,
        "ruku": 534,
        "hizbQuarter": 238,
        "sajda": false
      }
