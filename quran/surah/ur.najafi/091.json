  "data": {
    "number": 91,
    "name": "سُورَةُ الشَّمۡسِ",
    "englishName": "Ash-Shams",
    "englishNameTranslation": "The Sun",
    "revelationType": "Meccan",
    "numberOfAyahs": 15,
    "ayahs": [
      {
        "number": 6044,
        "text": "قَسم ہے سورج اور اس کی ضیاء و شعا ع کی۔",
        "numberInSurah": 1,
        "juz": 30,
        "manzil": 7,
        "page": 595,
        "ruku": 533,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6045,
        "text": "اور چاند کی جب وہ اس (سورج) کے پیچھے آئے۔",
        "numberInSurah": 2,
        "juz": 30,
        "manzil": 7,
        "page": 595,
        "ruku": 533,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6046,
        "text": "دن کی جب وہ اس (سورج) کو خوب روشن کر دے۔",
        "numberInSurah": 3,
        "juz": 30,
        "manzil": 7,
        "page": 595,
        "ruku": 533,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6047,
        "text": "اور رات کی جب کہ وہ اسے ڈھانپ لے۔",
        "numberInSurah": 4,
        "juz": 30,
        "manzil": 7,
        "page": 595,
        "ruku": 533,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6048,
        "text": "اور آسمان کی اور اس (ذات) کی جس نے اسے بنایا۔",
        "numberInSurah": 5,
        "juz": 30,
        "manzil": 7,
        "page": 595,
        "ruku": 533,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6049,
        "text": "اور زمین کی اور جس نے اسے بچھایا۔",
        "numberInSurah": 6,
        "juz": 30,
        "manzil": 7,
        "page": 595,
        "ruku": 533,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6050,
        "text": "اور انسانی نفس کی اور اس کی جس نے اسے درست بنایا۔",
        "numberInSurah": 7,
        "juz": 30,
        "manzil": 7,
        "page": 595,
        "ruku": 533,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6051,
        "text": "پھر اسے اس کی بدکاری اور پرہیزگاری کا الہام (القاء) کیا۔",
        "numberInSurah": 8,
        "juz": 30,
        "manzil": 7,
        "page": 595,
        "ruku": 533,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6052,
        "text": "بےشک وہ شخص فلاح پاگیا جس نے اس (نفس) کا تزکیہ کیا۔",
        "numberInSurah": 9,
        "juz": 30,
        "manzil": 7,
        "page": 595,
        "ruku": 533,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6053,
        "text": "اور وہ شخص نامراد ہوا جس نے (گناہ سے آلودہ کر کے) اسے دبا دیا۔",
        "numberInSurah": 10,
        "juz": 30,
        "manzil": 7,
        "page": 595,
        "ruku": 533,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6054,
        "text": "قومِ ثمود نے اپنی سرکشی کی وجہ سے (اپنے پیغمبر(ص) کو) جھٹلایا۔",
        "numberInSurah": 11,
        "juz": 30,
        "manzil": 7,
        "page": 595,
        "ruku": 533,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6055,
        "text": "جب ان کا سب سے زیادہ بدبخت (آدمی) اٹھ کھڑا ہوا۔",
        "numberInSurah": 12,
        "juz": 30,
        "manzil": 7,
        "page": 595,
        "ruku": 533,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6056,
        "text": "تو اللہ کے رسول(ع) (صالح(ع)) نے ان لوگوں سے کہا کہ اللہ کی اونٹنی اور اس کے پانی پینے سے خبر دار رہنا (اس کا خیال رکھنا)۔",
        "numberInSurah": 13,
        "juz": 30,
        "manzil": 7,
        "page": 595,
        "ruku": 533,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6057,
        "text": "پس ان لوگوں نے ان (رسول(ع)) کو جھٹلایا اور اونٹنی کی کونچیں کاٹ دیں تو ان کے پروردگار نے ان کے گناہ (عظیم) کی پاداش میں ان پر ہلاکت نازل کی اور اسی (بستی) کو زمین کے برابر کر دیا۔",
        "numberInSurah": 14,
        "juz": 30,
        "manzil": 7,
        "page": 595,
        "ruku": 533,
        "hizbQuarter": 238,
        "sajda": false
      },
      {
        "number": 6058,
        "text": "اور اللہ کو اس واقعہ کے انجام کا کوئی خوف نہیں ہے۔",
        "numberInSurah": 15,
        "juz": 30,
        "manzil": 7,
        "page": 595,
        "ruku": 533,
        "hizbQuarter": 238,
        "sajda": false
      }
