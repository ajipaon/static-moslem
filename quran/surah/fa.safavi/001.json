        "sajda": false
      },
      {
        "number": 2,
        "text": "ستایش از آنِ خداست که پروردگار جهانیان است،",
        "numberInSurah": 2,
        "juz": 1,
        "manzil": 1,
        "page": 1,
        "ruku": 1,
        "hizbQuarter": 1,
        "sajda": false
      },
      {
        "number": 3,
        "text": "همو که گسترده مهر و مهربان است.",
