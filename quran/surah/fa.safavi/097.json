    "numberOfAyahs": 5,
    "ayahs": [
      {
        "number": 6126,
        "text": "ما قرآن را در شب قدر که امور جهان هستی در آن مقدر می‌گردد، بر تو فرو فرستادیم.",
        "numberInSurah": 1,
        "juz": 30,
