{
  "code": 200,
  "status": "OK",
  "data": {
    "number": 51,
    "name": "سُورَةُ الذَّارِيَاتِ",
    "englishName": "Adh-Dhaariyat",
    "englishNameTranslation": "The Winnowing Winds",
    "revelationType": "Meccan",
    "numberOfAyahs": 60,
    "ayahs": [
      {
        "number": 4676,
        "text": "Inã rantsuwa da iskõki mãsu shẽkar abũbuwa, shẽƙẽwa.",
        "numberInSurah": 1,
        "juz": 26,
        "manzil": 7,
        "page": 520,
        "ruku": 455,
        "hizbQuarter": 208,
        "sajda": false
      },
      {
        "number": 4677,
        "text": "Sa'an nan da girãgizai mãsu ɗaukar nauyi (na ruwa).",
        "numberInSurah": 2,
        "juz": 26,
        "manzil": 7,
        "page": 520,
        "ruku": 455,
        "hizbQuarter": 208,
        "sajda": false
      },
      {
        "number": 4678,
        "text": "Sa'an nan da jirãge mãsu gudãna (a kan ruwa) da sauƙi.",
        "numberInSurah": 3,
        "juz": 26,
        "manzil": 7,
        "page": 520,
        "ruku": 455,
        "hizbQuarter": 208,
        "sajda": false
      },
      {
        "number": 4679,
        "text": "Sa'an nan da Malã'iku mãsu rabon al'amari (bisa umurnin Allah).",
        "numberInSurah": 4,
        "juz": 26,
        "manzil": 7,
        "page": 520,
        "ruku": 455,
        "hizbQuarter": 208,
        "sajda": false
      },
      {
        "number": 4680,
        "text": "Lalle abin da ake yi muku alkawari (da zuwansa), haƙĩƙa gaskiya ne.",
        "numberInSurah": 5,
        "juz": 26,
        "manzil": 7,
        "page": 520,
        "ruku": 455,
        "hizbQuarter": 208,
        "sajda": false
      },
      {
        "number": 4681,
        "text": "Kuma lalle sakamako (ga ayyukanku), haƙĩƙa, mai aukuwa ne",
        "numberInSurah": 6,
        "juz": 26,
        "manzil": 7,
        "page": 520,
        "ruku": 455,
        "hizbQuarter": 208,
        "sajda": false
      },
      {
        "number": 4682,
        "text": "Inã rantsuwa da samã ma'abũciyar hanyõyi (na tafiyar taurãri da sautin rediyo).",
        "numberInSurah": 7,
        "juz": 26,
        "manzil": 7,
        "page": 521,
        "ruku": 455,
        "hizbQuarter": 208,
        "sajda": false
      },
      {
        "number": 4683,
        "text": "Lalle kũ, haƙĩƙa, kunã cikin magana mai sãɓa wa juna (game da Alƙur'ani).",
        "numberInSurah": 8,
        "juz": 26,
        "manzil": 7,
        "page": 521,
        "ruku": 455,
        "hizbQuarter": 208,
        "sajda": false
      },
      {
        "number": 4684,
        "text": "Anã karkatar da wanda aka jũyar (daga gaskiya).",
        "numberInSurah": 9,
        "juz": 26,
        "manzil": 7,
        "page": 521,
        "ruku": 455,
        "hizbQuarter": 208,
        "sajda": false
      },
      {
        "number": 4685,
        "text": "An la'ani mãsu ƙiri-faɗi.",
        "numberInSurah": 10,
        "juz": 26,
        "manzil": 7,
        "page": 521,
        "ruku": 455,
        "hizbQuarter": 208,
        "sajda": false
      },
      {
        "number": 4686,
        "text": "Waɗanda suke shagala a cikin zurfin jãhilci.",
        "numberInSurah": 11,
        "juz": 26,
        "manzil": 7,
        "page": 521,
        "ruku": 455,
        "hizbQuarter": 208,
        "sajda": false
      },
      {
        "number": 4687,
        "text": "Sunã tambaya: \"Yaushe ne rãnar sakamako zã ta auku?\"",
        "numberInSurah": 12,
        "juz": 26,
        "manzil": 7,
        "page": 521,
        "ruku": 455,
        "hizbQuarter": 208,
        "sajda": false
      },
      {
        "number": 4688,
        "text": "Ranar da suke a kan wuta anã fitinar su.",
        "numberInSurah": 13,
        "juz": 26,
        "manzil": 7,
        "page": 521,
        "ruku": 455,
        "hizbQuarter": 208,
        "sajda": false
      },
      {
        "number": 4689,
        "text": "(A ce musu): \"Ku ɗanɗani fitinarku, wannan shĩ ne abin da kuka kasance kunã nẽman zuwansa da gaggãwa.\"",
        "numberInSurah": 14,
        "juz": 26,
        "manzil": 7,
        "page": 521,
        "ruku": 455,
        "hizbQuarter": 208,
        "sajda": false
      },
      {
        "number": 4690,
        "text": "Lalle mãsu taƙawa, sunã a cikin lambunan itãce da marẽmari.",
        "numberInSurah": 15,
        "juz": 26,
        "manzil": 7,
        "page": 521,
        "ruku": 455,
        "hizbQuarter": 208,
        "sajda": false
      },
      {
        "number": 4691,
        "text": "Sunã mãsu dĩbar abin da Ubangijinsu Ya bã su. Lalle sũ, sun kasance mãsu kyautatãwa a gabãnin haka (a dũniya).",
        "numberInSurah": 16,
        "juz": 26,
        "manzil": 7,
        "page": 521,
        "ruku": 455,
        "hizbQuarter": 208,
        "sajda": false
      },
      {
        "number": 4692,
        "text": "Sun kasance a lõkaci kaɗan na dare suke yin barci.",
        "numberInSurah": 17,
        "juz": 26,
        "manzil": 7,
        "page": 521,
        "ruku": 455,
        "hizbQuarter": 208,
        "sajda": false
      },
      {
        "number": 4693,
        "text": "Kuma a lõkutan asuba sunã ta yin istigfãri.",
        "numberInSurah": 18,
        "juz": 26,
        "manzil": 7,
        "page": 521,
        "ruku": 455,
        "hizbQuarter": 208,
        "sajda": false
      },
      {
        "number": 4694,
        "text": "Kuma a cikin dũkiyarsu akwai hakki ga (matalauci) mai rõƙo da wanda aka hana wa rõƙo.",
        "numberInSurah": 19,
        "juz": 26,
        "manzil": 7,
        "page": 521,
        "ruku": 455,
        "hizbQuarter": 208,
        "sajda": false
      },
      {
        "number": 4695,
        "text": "Kuma a cikin ƙasã akwai ãyõyi ga mãsu yaƙĩni.",
        "numberInSurah": 20,
        "juz": 26,
        "manzil": 7,
        "page": 521,
        "ruku": 455,
        "hizbQuarter": 208,
        "sajda": false
      },
      {
        "number": 4696,
        "text": "Kuma a cikin rãyukanku (akwai ãyõyi). To, bã zã ku dũbã ba?",
        "numberInSurah": 21,
        "juz": 26,
        "manzil": 7,
        "page": 521,
        "ruku": 455,
        "hizbQuarter": 208,
        "sajda": false
      },
      {
        "number": 4697,
        "text": "Kuma a cikin sama arzikinku (yake fitõwa) da abin da ake yi muku alkawari.",
        "numberInSurah": 22,
        "juz": 26,
        "manzil": 7,
        "page": 521,
        "ruku": 455,
        "hizbQuarter": 208,
        "sajda": false
      },
      {
        "number": 4698,
        "text": "To, kuma Ina rantsuwa da Ubangijin sama da ƙasã, lalle shĩ (abin da ake yi muku alkawari), haƙĩƙa gaskiya ne, kamar abin da kuka zamo kunã karantãwa na magana,",
        "numberInSurah": 23,
        "juz": 26,
        "manzil": 7,
        "page": 521,
        "ruku": 455,
        "hizbQuarter": 208,
        "sajda": false
      },
      {
        "number": 4699,
        "text": "Shin, lãbãrin Bãƙin Ibrãhĩm, waɗanda aka girmama, ya zo maka?",
        "numberInSurah": 24,
        "juz": 26,
        "manzil": 7,
        "page": 521,
        "ruku": 456,
        "hizbQuarter": 208,
        "sajda": false
      },
      {
        "number": 4700,
        "text": "A lõkacin da suka shiga gare shi, sai suka yi sallama; ya ce \"Aminci ya tabbata a gare ku, mutãne bãƙi!\"",
        "numberInSurah": 25,
        "juz": 26,
        "manzil": 7,
        "page": 521,
        "ruku": 456,
        "hizbQuarter": 208,
        "sajda": false
      },
      {
        "number": 4701,
        "text": "Sai ya jũya zuwa ga iyãlinsa, sa'an nan ya zo da maraƙi tutturna,",
        "numberInSurah": 26,
        "juz": 26,
        "manzil": 7,
        "page": 521,
        "ruku": 456,
        "hizbQuarter": 208,
        "sajda": false
      },
      {
        "number": 4702,
        "text": "Sai ya kusantar da shi zuwa gare su, ya ce: \"Bã zã ku ci ba?\"",
        "numberInSurah": 27,
        "juz": 26,
        "manzil": 7,
        "page": 521,
        "ruku": 456,
        "hizbQuarter": 208,
        "sajda": false
      },
      {
        "number": 4703,
        "text": "Sai ya ji tsõro daga gare su. Suka ce: \"Kada kaji tsõro.\" Kuma suka yi masa bushãra da (haihuwar) wani yaro mai ilmi.",
        "numberInSurah": 28,
        "juz": 26,
        "manzil": 7,
        "page": 521,
        "ruku": 456,
        "hizbQuarter": 208,
        "sajda": false
      },
      {
        "number": 4704,
        "text": "Sai matarsa ta fuskanta cikin ƙyallõwa, har ta mari fuskarta kuma ta ce: \"Tsõhuwa bakarãriya (zã ta haihu)!\"",
        "numberInSurah": 29,
        "juz": 26,
        "manzil": 7,
        "page": 521,
        "ruku": 456,
        "hizbQuarter": 208,
        "sajda": false
      },
      {
        "number": 4705,
        "text": "Suka ce: \"Kamar haka Ubangijinki Ya faɗa. Lalle Shĩ, Shĩ ne Mai hikima, Mai ilmi.\"",
        "numberInSurah": 30,
        "juz": 26,
        "manzil": 7,
        "page": 521,
        "ruku": 456,
        "hizbQuarter": 208,
        "sajda": false
      },
      {
        "number": 4706,
        "text": "(Ibrãĩm) ya ce: \"To mẽne ne babban al'almarinku, yã kũ Manzanni!\"",
        "numberInSurah": 31,
        "juz": 27,
        "manzil": 7,
        "page": 522,
        "ruku": 456,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4707,
        "text": "Suka ce: \"Lalle mũ, an aike mu zuwa ga waɗansu mutãne, mãsu laifi.",
        "numberInSurah": 32,
        "juz": 27,
        "manzil": 7,
        "page": 522,
        "ruku": 456,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4708,
        "text": "\"Dõmin mu saka musu waɗansu duwãtsu na wani yumɓu (bom).",
        "numberInSurah": 33,
        "juz": 27,
        "manzil": 7,
        "page": 522,
        "ruku": 456,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4709,
        "text": "\"Waɗanda aka yi wa alãma daga wajen Ubangijinka, dõmin mãsu ɓarna.\"",
        "numberInSurah": 34,
        "juz": 27,
        "manzil": 7,
        "page": 522,
        "ruku": 456,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4710,
        "text": "Sa'an, nan Muka fitar da wanda ya kasance a cikinta daga mũminai.",
        "numberInSurah": 35,
        "juz": 27,
        "manzil": 7,
        "page": 522,
        "ruku": 456,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4711,
        "text": "Sai dai ba mu sãmu ba, a cikinta, fãce gida guda na Musulmi.",
        "numberInSurah": 36,
        "juz": 27,
        "manzil": 7,
        "page": 522,
        "ruku": 456,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4712,
        "text": "Kuma Muka bar wata ãyã, a cikinta, ga waɗanda ke jin tsõron azãba, mai raɗaɗi.",
        "numberInSurah": 37,
        "juz": 27,
        "manzil": 7,
        "page": 522,
        "ruku": 456,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4713,
        "text": "Kuma ga Mũsã, a lõkacin da Muka aiko shi zuwa ga Fir'auna da wani dalĩli bayyananne.",
        "numberInSurah": 38,
        "juz": 27,
        "manzil": 7,
        "page": 522,
        "ruku": 456,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4714,
        "text": "Sai ya jũya bãya tãre da ƙarfinsa, kuma ya ce: \"Mai sihiri ne kõ kuwa mahaukaci!\"",
        "numberInSurah": 39,
        "juz": 27,
        "manzil": 7,
        "page": 522,
        "ruku": 456,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4715,
        "text": "Sabõda haka, Muka kama shi tãre da rundunarsa, sa'an nan Muka jẽfa su a cikin tẽku, alhãli kuwa yanã wanda ake zargi.",
        "numberInSurah": 40,
        "juz": 27,
        "manzil": 7,
        "page": 522,
        "ruku": 456,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4716,
        "text": "Kuma ga Ãdãwa, a lõkacin da Muka aika iska ƙẽƙasasshiya a kansu.",
        "numberInSurah": 41,
        "juz": 27,
        "manzil": 7,
        "page": 522,
        "ruku": 456,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4717,
        "text": "Bã ta barin kõme da ta jẽ a kansa, fãce ta mayar da shi kamar rududdugaggun ƙasũsuwa.",
        "numberInSurah": 42,
        "juz": 27,
        "manzil": 7,
        "page": 522,
        "ruku": 456,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4718,
        "text": "Kuma ga Samũdãwa, a lõkacin da aka ce musu: \"Ku ji ɗan dãɗi har wani ɗan lõkaci,\"",
        "numberInSurah": 43,
        "juz": 27,
        "manzil": 7,
        "page": 522,
        "ruku": 456,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4719,
        "text": "Sai suka yi girman kai ga umurnin Ubangijinsu, sabõda haka tsãwa ta kãma su, alhãli kuwa sunã kallo.",
        "numberInSurah": 44,
        "juz": 27,
        "manzil": 7,
        "page": 522,
        "ruku": 456,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4720,
        "text": "Ba su kõ sãmu dãmar tsayãwa ba, kuma ba su kasance mãsu nẽman ãgaji ba.",
        "numberInSurah": 45,
        "juz": 27,
        "manzil": 7,
        "page": 522,
        "ruku": 456,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4721,
        "text": "Da mutãnen Nũhu a gabãnin haka, lalle sun kasance waɗansu irin mutãne ne fãsiƙai.",
        "numberInSurah": 46,
        "juz": 27,
        "manzil": 7,
        "page": 522,
        "ruku": 456,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4722,
        "text": "Kuma sama, mun gina ta da wani irin ƙarfi, alhãli kuwa lalle Mũ ne Mãsu yalwatãwa.",
        "numberInSurah": 47,
        "juz": 27,
        "manzil": 7,
        "page": 522,
        "ruku": 457,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4723,
        "text": "Kuma ƙasã Mun shimfiɗa ta, To, madalla da mãsu shimfiɗãwa, Mũ,",
        "numberInSurah": 48,
        "juz": 27,
        "manzil": 7,
        "page": 522,
        "ruku": 457,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4724,
        "text": "Kuma daga kõme Mun halitta nau'i biyu, watakila zã ku yi tunãni.",
        "numberInSurah": 49,
        "juz": 27,
        "manzil": 7,
        "page": 522,
        "ruku": 457,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4725,
        "text": "Sabõda haka ku gudu zuwa ga Allah, lalle nĩ mai gargaɗi kawai ne a gare ku, mai bayyanannen gargaɗi.",
        "numberInSurah": 50,
        "juz": 27,
        "manzil": 7,
        "page": 522,
        "ruku": 457,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4726,
        "text": "Kuma kada ku sanya, tãre da Allah wani abin bautãwa na dabam, lalle nĩ, mai gargaɗi kawai ne a gare ku, mai bayyanannen gargaɗi.",
        "numberInSurah": 51,
        "juz": 27,
        "manzil": 7,
        "page": 522,
        "ruku": 457,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4727,
        "text": "Kamar haka dai wani Manzo bai jẽ wa waɗanda ke gabãninsu ba fãce sun ce: \"Mai sihiri ne kõ mahaukaci.\"",
        "numberInSurah": 52,
        "juz": 27,
        "manzil": 7,
        "page": 523,
        "ruku": 457,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4728,
        "text": "shin, sunã yi wa jũna wasiyya da shi ne? Ã'a, sũ dai mutãne ne mãsu girman kai.",
        "numberInSurah": 53,
        "juz": 27,
        "manzil": 7,
        "page": 523,
        "ruku": 457,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4729,
        "text": "Sai ka jũya daga barinsu, kuma kai ba abin zargi ba ne.",
        "numberInSurah": 54,
        "juz": 27,
        "manzil": 7,
        "page": 523,
        "ruku": 457,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4730,
        "text": "Kuma ka tunãtar, dõmin tunãtarwa tanã amfãnin mũminai.",
        "numberInSurah": 55,
        "juz": 27,
        "manzil": 7,
        "page": 523,
        "ruku": 457,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4731,
        "text": "Kuma Ban halitta aljannu da mutãne ba sai dõmin su bauta Mini.",
        "numberInSurah": 56,
        "juz": 27,
        "manzil": 7,
        "page": 523,
        "ruku": 457,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4732,
        "text": "Bã Ni nufln (sãmun) wani arziki daga gare su, Bã Ni nufin su (yi Mini hidimar) ciyar da Ni.",
        "numberInSurah": 57,
        "juz": 27,
        "manzil": 7,
        "page": 523,
        "ruku": 457,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4733,
        "text": "Lalle Allah, Shĩ ne Mai azurtãwa, Mai ĩkon yi, Mai cikakken ƙarfi.",
        "numberInSurah": 58,
        "juz": 27,
        "manzil": 7,
        "page": 523,
        "ruku": 457,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4734,
        "text": "To, lalle waɗanda suka yi zãlunci sunã da masaki (na ɗĩban zunubi) kamar masakin abõkansu, sabõda haka kada su yi Mini gaggãwa.",
        "numberInSurah": 59,
        "juz": 27,
        "manzil": 7,
        "page": 523,
        "ruku": 457,
        "hizbQuarter": 209,
        "sajda": false
      },
      {
        "number": 4735,
        "text": "Sabõda haka, bone ya tabbata ga waɗanda suka kãfirta, daga rãnar su wadda aka yi musu alkawari.",
        "numberInSurah": 60,
        "juz": 27,
        "manzil": 7,
        "page": 523,
        "ruku": 457,
        "hizbQuarter": 209,
        "sajda": false
      }
    ],
    "edition": {
      "identifier": "ha.gumi",
      "language": "ha",
      "name": "Gumi",
      "englishName": "Abubakar Mahmoud Gumi",
      "format": "text",
      "type": "translation",
      "direction": "ltr"
    }
  }
}