{
  "code": 200,
  "status": "OK",
  "data": {
    "number": 68,
    "name": "سُورَةُ القَلَمِ",
    "englishName": "Al-Qalam",
    "englishNameTranslation": "The Pen",
    "revelationType": "Meccan",
    "numberOfAyahs": 52,
    "ayahs": [
      {
        "number": 5272,
        "text": "Nun, andolsun kaleme ve yazdıklarına.",
        "numberInSurah": 1,
        "juz": 29,
        "manzil": 7,
        "page": 564,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5273,
        "text": "Sen, Rabbinin nimeti sayesinde deli değilsin.",
        "numberInSurah": 2,
        "juz": 29,
        "manzil": 7,
        "page": 564,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5274,
        "text": "Ve sana, tükenmez, minnetsiz bir mükafat var.",
        "numberInSurah": 3,
        "juz": 29,
        "manzil": 7,
        "page": 564,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5275,
        "text": "Ve şüphe yok ki sen, pek büyük bir ahlaka sahipsin elbette.",
        "numberInSurah": 4,
        "juz": 29,
        "manzil": 7,
        "page": 564,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5276,
        "text": "Yakında sen de görürsün ve onlar da görürler.",
        "numberInSurah": 5,
        "juz": 29,
        "manzil": 7,
        "page": 564,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5277,
        "text": "Deliliğe uğramış hanginiz?",
        "numberInSurah": 6,
        "juz": 29,
        "manzil": 7,
        "page": 564,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5278,
        "text": "Şüphe yok ki Rabbin, kendi yolundan sapanı da daha iyi bilir ve o, doğru yolu bulanları da daha iyi bilir.",
        "numberInSurah": 7,
        "juz": 29,
        "manzil": 7,
        "page": 564,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5279,
        "text": "Artık yalanlayanlara itaat etme.",
        "numberInSurah": 8,
        "juz": 29,
        "manzil": 7,
        "page": 564,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5280,
        "text": "Onlara yumuşaklık göstermeni arzularlar, öyle hareket etsen onlar da yumuşaklık gösterirler.",
        "numberInSurah": 9,
        "juz": 29,
        "manzil": 7,
        "page": 564,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5281,
        "text": "Ve itaat etme çok yemin edenlerin, reyinde isabet bulunmayanların hiçbirine.",
        "numberInSurah": 10,
        "juz": 29,
        "manzil": 7,
        "page": 564,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5282,
        "text": "Ayıp arayan, kovucu ve söz getirip götürücüyle.",
        "numberInSurah": 11,
        "juz": 29,
        "manzil": 7,
        "page": 564,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5283,
        "text": "Hayrı tamamıyla meneden haddini aşmış suçluya.",
        "numberInSurah": 12,
        "juz": 29,
        "manzil": 7,
        "page": 564,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5284,
        "text": "Ayrıca da çirkin ve kötü huylu soysuza.",
        "numberInSurah": 13,
        "juz": 29,
        "manzil": 7,
        "page": 564,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5285,
        "text": "Malmülk ve evlat sahibi bile olsa.",
        "numberInSurah": 14,
        "juz": 29,
        "manzil": 7,
        "page": 564,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5286,
        "text": "Ona ayetlerimizi okuyunca eskilere ait masallar dedi.",
        "numberInSurah": 15,
        "juz": 29,
        "manzil": 7,
        "page": 564,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5287,
        "text": "Büyüyüp bir hortuma dönen burnuna, yakında bir damga vururuz.",
        "numberInSurah": 16,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5288,
        "text": "Ve biz, onları açlıkla, kıtlıkla sınarız, nitekim o bahçe sahiplerini de sınamıştık; hani, sabahleyin erkenden, bahçelerindeki mahsulü kesmeye ant içmişlerdi.",
        "numberInSurah": 17,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5289,
        "text": "Ve Tanrı dilerse de dememişlerdi.",
        "numberInSurah": 18,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5290,
        "text": "Halbuki bahçenin üstünde, Rabbinden gelen bir felaket dolaşmadaydı ki onlar uyuyorlardı.",
        "numberInSurah": 19,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5291,
        "text": "Derken bahçe, bütün mahsulü kesilip biçilmiş, kupkuru çorak bir yere, bir çöle dönmüştü.",
        "numberInSurah": 20,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5292,
        "text": "Sabahleyin birbirlerine sesleniyorlardı.",
        "numberInSurah": 21,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5293,
        "text": "Mahsulünüzü kesip devşirecekseniz erkence koşun, gidin.",
        "numberInSurah": 22,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5294,
        "text": "Derken yola düştüler ve birbirlerine de gizlice diyorlardı ki.",
        "numberInSurah": 23,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5295,
        "text": "Bugün hiçbir yoksula yol vermeyin, yanınıza gelmesin sakın.",
        "numberInSurah": 24,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5296,
        "text": "Ve kendilerini, yoksulları men etmeye güçleri yeter sanarak erkenden gittiler.",
        "numberInSurah": 25,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5297,
        "text": "Bahçeyi görünce gerçekten de dediler, elbette yolumuzu şaşırdık.",
        "numberInSurah": 26,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5298,
        "text": "Hayır dediler, biz mahrum olup gitmişiz.",
        "numberInSurah": 27,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5299,
        "text": "İçlerinden en iyileri, ben demedim miydi size dedi, mabudunuzu tenzih etseniz ne olurdu.",
        "numberInSurah": 28,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5300,
        "text": "Dediler ki: Şanı yücedir Rabbimizin, gerçekten de zalimlerden olduk biz.",
        "numberInSurah": 29,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5301,
        "text": "Bir birlerine dönerek birbirlerini kınamaya başladılar.",
        "numberInSurah": 30,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5302,
        "text": "Yazıklar olsun bize dediler, gerçekten de azmışız biz.",
        "numberInSurah": 31,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5303,
        "text": "Umulur ki Rabbimiz, onun yerine bize daha da hayırlısını verir, gerçekten de biz, Rabbimizi dilemede, ondan istemedeyiz.",
        "numberInSurah": 32,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5304,
        "text": "İşte bunun gibidir azap ve elbette ahiret azabı, daha da büyüktür bilirseniz.",
        "numberInSurah": 33,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 498,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5305,
        "text": "Şüphe yok ki çekinenlere, Rableri katında Naim cennetleri var.",
        "numberInSurah": 34,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 499,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5306,
        "text": "Artık Müslümanları da suçlularla bir mi tutacağız?",
        "numberInSurah": 35,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 499,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5307,
        "text": "Ne oldu size ki? Nasıl hükmediyorsunuz?",
        "numberInSurah": 36,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 499,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5308,
        "text": "Yoksa size mahsus bir kitap var da oradan mı okuyorsunuz.",
        "numberInSurah": 37,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 499,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5309,
        "text": "Orada, neyi beğenir, isterseniz sizindir diye mi yazılı?",
        "numberInSurah": 38,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 499,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5310,
        "text": "Yoksa hükmü kıyametedek sürecek antlar mı ettik size, şüphe yok ki ne buyurursanız o olacak sizin için diye?",
        "numberInSurah": 39,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 499,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5311,
        "text": "Onlara sor, bunlara kefil olan kimmiş içlerinden?",
        "numberInSurah": 40,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 499,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5312,
        "text": "Yoksa ortakları mı var? Doğru söylüyorlarsa gelsinler bakalım ortaklarıyla.",
        "numberInSurah": 41,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 499,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5313,
        "text": "O gün, işler güçleşir ve secdeye davet edilirler, derken güçleri yetmez.",
        "numberInSurah": 42,
        "juz": 29,
        "manzil": 7,
        "page": 565,
        "ruku": 499,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5314,
        "text": "Gözleri yere dikilir, üstlerine aşağılık çöker ve gerçekten de sağ esenken de secdeye davet edilmişlerdir de secde etmemişlerdi.",
        "numberInSurah": 43,
        "juz": 29,
        "manzil": 7,
        "page": 566,
        "ruku": 499,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5315,
        "text": "Artık sen, bu sözü yalanlayanı bırak bana, biz onları yavaşyavaş, hiç bilmedikleri yerden cehenneme çekerdururuz.",
        "numberInSurah": 44,
        "juz": 29,
        "manzil": 7,
        "page": 566,
        "ruku": 499,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5316,
        "text": "Ve onlara mühlet vermedeyim, fakat şüphe yok ki azabım, pek kuvvetlidir.",
        "numberInSurah": 45,
        "juz": 29,
        "manzil": 7,
        "page": 566,
        "ruku": 499,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5317,
        "text": "Yoksa onlardan ücret istiyorsun da derken onlar da ağır bir borç altında mı kaldılar?",
        "numberInSurah": 46,
        "juz": 29,
        "manzil": 7,
        "page": 566,
        "ruku": 499,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5318,
        "text": "Yoksa gizli alem, onların yanında da onu mu yazıyorlar?",
        "numberInSurah": 47,
        "juz": 29,
        "manzil": 7,
        "page": 566,
        "ruku": 499,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5319,
        "text": "Artık sabret Rabbinin hükmüne ve balıkla arkadaş olana benzeme; hani o, dertten boğulmuş bir halde Rabbine nida etmişti.",
        "numberInSurah": 48,
        "juz": 29,
        "manzil": 7,
        "page": 566,
        "ruku": 499,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5320,
        "text": "Rabbinden bir nimet erişmeseydi ona elbette bir yere, fena bir halde bırakılır giderdi.",
        "numberInSurah": 49,
        "juz": 29,
        "manzil": 7,
        "page": 566,
        "ruku": 499,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5321,
        "text": "Derken Rabbi, onu seçti de temiz kişilerden kıldı.",
        "numberInSurah": 50,
        "juz": 29,
        "manzil": 7,
        "page": 566,
        "ruku": 499,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5322,
        "text": "Ve az kalmıştı ki kafirler, Kur'an'ı duydukları zaman seni gözleriyle yiyip helak etsinler ve derlerdi ki: Şüphe yok, bu, bir deli elbette.",
        "numberInSurah": 51,
        "juz": 29,
        "manzil": 7,
        "page": 566,
        "ruku": 499,
        "hizbQuarter": 226,
        "sajda": false
      },
      {
        "number": 5323,
        "text": "Halbuki o, ancak alemlere bir öğüttür.",
        "numberInSurah": 52,
        "juz": 29,
        "manzil": 7,
        "page": 566,
        "ruku": 499,
        "hizbQuarter": 226,
        "sajda": false
      }
    ],
    "edition": {
      "identifier": "tr.golpinarli",
      "language": "tr",
      "name": "Abdulbakî Gölpınarlı",
      "englishName": "Abdulbaki Golpinarli",
      "format": "text",
      "type": "translation",
      "direction": "ltr"
    }
  }
}